              "raw": "{\n  \"parts\": [\n    {\n      \"PartNumber\": 1,\n      \"ETag\": \"\\\"d41d8cd98f00b204e9800998ecf8427e\\\"\"\n    },\n    {\n      \"PartNumber\": 2,\n      \"ETag\": \"\\\"098f6bcd4621d373cade4e832627b4f6\\\"\"\n    }\n  ]\n}"
            },
            "url": {
              "raw": "{{base_url}}/documents/{{document_hash}}/multipart/complete",
              "host": ["{{base_url}}"],
              "path": ["documents", "{{document_hash}}", "multipart", "complete"]
