# Laravel PDF Viewer - Laravel Vapor Environment Configuration
# Copy this to your project's .env file and configure for Vapor deployment

# Storage Configuration - S3 Required for Vapor
PDF_VIEWER_DISK=s3
PDF_VIEWER_PATH=pdf-documents
PDF_VIEWER_PAGES_PATH=pdf-pages
PDF_VIEWER_THUMBNAILS_PATH=pdf-thumbnails

# S3 Storage Settings
PDF_VIEWER_SIGNED_URL_EXPIRES=3600
PDF_VIEWER_MULTIPART_THRESHOLD=52428800
PDF_VIEWER_STREAM_READS=true

# Vapor/Lambda Configuration
PDF_VIEWER_VAPOR_ENABLED=true
PDF_VIEWER_LAMBDA_TIMEOUT=900
PDF_VIEWER_LAMBDA_MEMORY=3008
PDF_VIEWER_TEMP_DIR=/tmp
PDF_VIEWER_CHUNK_SIZE=1048576
PDF_VIEWER_CONCURRENT_UPLOADS=5

# Processing Timeouts (must be less than Lambda timeout)
PDF_VIEWER_TIMEOUT=870
PDF_VIEWER_DOCUMENT_TIMEOUT=270
PDF_VIEWER_PAGE_TIMEOUT=50
PDF_VIEWER_TEXT_TIMEOUT=25

# Job Configuration - Use default queue for Vapor
PDF_VIEWER_DOCUMENT_QUEUE=default
PDF_VIEWER_PAGE_QUEUE=default
PDF_VIEWER_TEXT_QUEUE=default

# Processing Configuration
PDF_VIEWER_MAX_FILE_SIZE=104857600
PDF_VIEWER_MEMORY_LIMIT=512M

# Cache Configuration - Use DynamoDB for Vapor
PDF_VIEWER_CACHE_ENABLED=true
PDF_VIEWER_CACHE_STORE=dynamodb
PDF_VIEWER_CACHE_PREFIX=pdf_viewer

# Search Configuration
PDF_VIEWER_SEARCH_MIN_LENGTH=3
PDF_VIEWER_SEARCH_MAX_LENGTH=255
PDF_VIEWER_SEARCH_RESULTS_PER_PAGE=15

# Thumbnails
PDF_VIEWER_THUMBNAILS_ENABLED=true
PDF_VIEWER_THUMBNAIL_WIDTH=300
PDF_VIEWER_THUMBNAIL_HEIGHT=400
PDF_VIEWER_THUMBNAIL_QUALITY=80

# Security
PDF_VIEWER_HASH_ALGORITHM=sha256
PDF_VIEWER_MAX_UPLOAD_ATTEMPTS=5
PDF_VIEWER_RATE_LIMIT=60

# Package-specific AWS Configuration (avoids conflicts with other packages)
PDF_VIEWER_AWS_ACCESS_KEY_ID=your_access_key_here
PDF_VIEWER_AWS_SECRET_ACCESS_KEY=your_secret_access_key_here
PDF_VIEWER_AWS_REGION=ap-southeast-2
PDF_VIEWER_AWS_BUCKET=your-bucket-name
PDF_VIEWER_AWS_USE_PATH_STYLE_ENDPOINT=false

# Laravel Vapor Asset URL (for S3 asset serving)
ASSET_URL=${VAPOR_ASSET_URL}
MIX_ASSET_URL=${VAPOR_ASSET_URL}

# Queue Configuration
QUEUE_CONNECTION=sqs
SQS_PREFIX=https://sqs.us-east-1.amazonaws.com/your-account-id

# Cache Configuration  
CACHE_DRIVER=dynamodb

# Session Configuration
SESSION_DRIVER=dynamodb
SESSION_LIFETIME=120

# Database - RDS recommended for production
DB_CONNECTION=mysql